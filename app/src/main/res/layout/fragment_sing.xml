<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SingFragment">

    <LinearLayout android:id="@+id/linearSixteen"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        style="@style/groupStyle_rectangle_bg_name_gray_50_01">

        <androidx.appcompat.widget.Toolbar
            android:gravity="center_horizontal"
            android:id="@+id/toolbarAppBar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
          app:contentInsetStart="0dp"
             >

            <LinearLayout android:id="@+id/linearAppBar"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:background="@drawable/rectangle_border_name_black_900_radius_7"
                    android:id="@+id/btnArrowLeft"
                    android:layout_gravity="top"
                    android:layout_height="@dimen/_49pxh"
                    android:layout_width="@dimen/_34pxh"
                    android:paddingHorizontal="@dimen/_6pxh"
                    android:paddingVertical="@dimen/_6pxv"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_arrow_left"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:id="@+id/txtPersonality"
                    style="@style/txtPoppinssemibold18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                  android:layout_marginLeft="@dimen/_266pxh"
                    android:singleLine="true"
                    android:text="Sing Up"
                 />

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:clipToPadding="false"
            android:fillViewport="true"
            android:gravity="center_horizontal"
            android:id="@+id/scrollViewScrollView"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent">

            <LinearLayout
                android:id="@+id/linearSignUp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:gravity="start"
                    android:id="@+id/linearPageHeader"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtWhenCommunityComes"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:lineSpacingExtra="@dimen/_4pxh"
                        android:text="When community comes Unity"
                        style="@style/txtPoppinsbold34"
                        />

                    <TextView
                        android:id="@+id/txtDuration"
                        style="@style/txtPoppinsregular12_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="@dimen/_8pxh"
                        android:text="Our Community is always there 24 hours if you need it,don't hesitate to join"
                        android:textSize="@dimen/_16pxh" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageLogo"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="@dimen/_110pxh"
                    android:layout_width="@dimen/_114pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_logo_gray_50_01_120x114"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_logo_gray_50_01_120x114"/>
                <EditText
                    android:background="@drawable/rectangle_border_name_onprimary_opacity_0_1_radius_10"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins"
                    android:hint="@string/lbl_first_name"
                    android:id="@+id/etFirstName"
                    android:inputType="text"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_19pxv"
                    android:paddingEnd="@dimen/_28pxh"
                    android:paddingStart="@dimen/_25pxh"
                    android:paddingTop="@dimen/_15pxv"
                    android:singleLine="true"
                    android:text="Fast name"
                    android:textColor="@color/onPrimary"
                    android:textColorHint="@color/onPrimary"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_19pxh"
                    android:textStyle="bold"
                    tools:ignore="Autofill"/>
                <EditText
                    android:background="@drawable/rectangle_border_name_onprimary_opacity_0_1_radius_10"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins"
                    android:hint="Last Name"
                    android:id="@+id/etLastName"
                    android:inputType="text"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_19pxv"
                    android:paddingEnd="@dimen/_24pxh"
                    android:paddingStart="@dimen/_24pxh"
                    android:paddingTop="@dimen/_19pxv"
                    android:singleLine="true"
                    android:text="Last Name"
                    android:textColor="@color/onPrimary"
                    android:textColorHint="@color/onPrimary"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_19pxh"
                    android:textStyle="bold"
                    tools:ignore="Autofill"/>

                <EditText
                    android:background="@drawable/rectangle_border_name_onprimary_opacity_0_1_radius_10"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins"
                    android:hint="Password"
                    android:id="@+id/etPassword"
                    android:inputType="text"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_19pxv"
                    android:paddingEnd="@dimen/_24pxh"
                    android:paddingStart="@dimen/_24pxh"
                    android:paddingTop="@dimen/_19pxv"
                    android:singleLine="true"
                    android:text="Password"
                    android:textColor="@color/onPrimary"
                    android:textColorHint="@color/onPrimary"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_16pxh"
                    android:textStyle="bold"
                    tools:ignore="Autofill"/>
                <TextView
                    android:gravity="start"
                    android:id="@+id/txtLoremIpsumDolor"
                    android:layout_height="wrap_content"
                     android:textSize="@dimen/_16pxh"
                    android:layout_width="match_parent"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="@dimen/_8pxh"
                    android:text="I Accept the Agreements"
                    style="@style/txtPoppinsmedium12"
                    android:layout_marginLeft="@dimen/_16pxh"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:background="#0664CF"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins"
                    android:gravity="center" android:id="@+id/btnNext"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_19pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingStart="@dimen/_30pxh"
                    android:paddingTop="@dimen/_19pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_next"
                    android:textAllCaps="false"
                    android:textColor="@color/white_A700"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_16pxh"
                    android:textStyle="bold"
                    tools:text="@string/lbl_next"/>

                <LinearLayout
                    android:id="@+id/linearAlreadyHaveAn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtConfirmation"
                        style="@style/txtPoppinsmedium12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:layout_margin="@dimen/_16pxh"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="@dimen/_6pxh"
                        android:singleLine="true"
                        android:text="Already Have an Account?  Login"
                        android:textSize="@dimen/_16pxh"
                        android:gravity="center"
                        />




                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>