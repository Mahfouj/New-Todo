<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginFragment">

    <LinearLayout
        android:id="@+id/linearNineteen"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        style="@style/groupStyle_white_a700">

        <androidx.appcompat.widget.Toolbar
            android:gravity="center_horizontal"
            android:id="@+id/toolbarAppBar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:contentInsetStart="0dp"
            >

            <LinearLayout
                android:id="@+id/linearAppBar"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:background="@drawable/rectangle_border_name_black_900_radius_7"
                    android:id="@+id/btnArrowLeft"
                    android:layout_gravity="top"
                    android:layout_height="@dimen/_49pxh"
                    android:layout_width="@dimen/_35pxh"
                    android:paddingHorizontal="@dimen/_10pxh"
                    android:paddingVertical="@dimen/_6pxv"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_arrow_left"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:ellipsize="end"
                    android:id="@+id/txtPersonality"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/_290pxh"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="Login"
                    style="@style/txtPoppinssemibold18"
                    />

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:clipToPadding="false"
            android:fillViewport="true"
            android:gravity="center_horizontal"
            android:id="@+id/scrollViewScrollView"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent">

            <LinearLayout
                android:id="@+id/linearLogin"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:gravity="start"
                    android:id="@+id/linearPageHeader"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtThisIsYourCommunity"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:lineSpacingExtra="@dimen/_6pxh"
                        android:text="This is your community,help them to grow more"
                        style="@style/txtPoppinsbold34"
          />

                    <TextView android:id="@+id/txtOurCommunityIs"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:letterSpacing="0.01"
                       android:textSize="@dimen/_17pxh"
                        android:lineSpacingExtra="@dimen/_8pxh"
                        android:text="  Our community is your community too so let's strengthen our community together "
                        style="@style/txtPoppinsmedium12"
                       />

                </LinearLayout>

                <ImageView android:id="@+id/imageLogo"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="@dimen/_113pxh"
                    android:layout_width="@dimen/_116pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_logo_gray_50_01_113x116"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_logo_gray_50_01_113x116"/>

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_border_name_onprimary_opacity_0_1_radius_14"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins"
                    android:hint="@string/lbl_email2"
                    android:inputType="text"
                    android:paddingStart="@dimen/_24pxh"
                    android:paddingTop="@dimen/_19pxv"
                    android:paddingEnd="@dimen/_24pxh"
                    android:paddingBottom="@dimen/_19pxv"
                    android:singleLine="true"
                    android:textColor="@color/onPrimary"
                    android:textColorHint="@color/onPrimary"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_17pxh"
                    android:textStyle="bold"
                    tools:ignore="Autofill" />

                <EditText
                    android:background="@drawable/rectangle_border_name_onprimary_opacity_0_1_radius_14"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins"
                    android:hint="@string/lbl_password"
                    android:id="@+id/etPassword"
                    android:inputType="text"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_19pxv"
                    android:paddingEnd="@dimen/_24pxh"
                    android:paddingStart="@dimen/_24pxh"
                    android:paddingTop="@dimen/_19pxv"
                    android:singleLine="true"
                    android:textColor="@color/onPrimary"
                    android:textColorHint="@color/onPrimary"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_17pxh"
                    android:textStyle="bold" tools:ignore="Autofill"/>
                <TextView
                    android:ellipsize="end"
                    android:id="@+id/password"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white_A700"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="@dimen/_6pxh"
                    android:textSize="@dimen/_19pxh"
                    android:singleLine="true"
                    android:background="#CD0E0E"
                    android:text="Forget Password"
                    style="@style/txtPoppinssemibold12"
               />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_margin="@dimen/_9pxh"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:id="@+id/btnNext"
                    android:layout_height="@dimen/_68pxh"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_19pxv"
                    android:background="#0664CF"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingStart="@dimen/_30pxh"
                    android:paddingTop="@dimen/_19pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_next"
                    android:textAllCaps="false"
                    android:textColor="@color/white_A700"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_19pxh"
                    android:textStyle="bold"
                    tools:text="@string/lbl_next"/>

                <LinearLayout
                    android:gravity="center_vertical"
                    android:id="@+id/linearDonTHaveAnAccount"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:ellipsize="end"
                        android:gravity="top"
                        android:id="@+id/txtConfirmation"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="@dimen/_6pxh"
                        android:singleLine="true"
                        android:text="Already Have an Account? Sing UP"
                        android:textSize="@dimen/_18pxh"
                        android:textStyle="bold"
                        />


                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>