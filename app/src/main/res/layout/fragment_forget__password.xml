<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Forget_PasswordFragment">

    <LinearLayout android:id="@+id/linearTwentyThree"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_29pxv"
        android:paddingTop="@dimen/_5pxv"
        style="@style/groupStyle_white_a700">

        <androidx.appcompat.widget.Toolbar
            android:gravity="center_horizontal"
            android:id="@+id/toolbarAppBar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:contentInsetStart="0dp"
            >

            <LinearLayout android:id="@+id/linearAppBar"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">

<!--                <ImageButton-->
<!--                    android:background="@drawable/rectangle_border_name_black_900_radius_7"-->
<!--                    android:id="@+id/btnArrowLeft"-->
<!--                    android:layout_gravity="top"-->
<!--                   android:layout_marginLeft="@dimen/_16pxh"-->
<!--                    android:layout_height="@dimen/_49pxh"-->
<!--                    android:layout_width="@dimen/_49pxh"-->
<!--                    android:paddingHorizontal="@dimen/_6pxh"-->
<!--                    android:paddingVertical="@dimen/_6pxv"-->
<!--                     android:scaleType="fitCenter"-->
<!--                    android:src="@drawable/img_arrow_left"-->
<!--                    tools:ignore="ContentDescription"/>-->

                <TextView android:ellipsize="end"
                    android:id="@+id/txtPersonality"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/_210pxh"
                    android:singleLine="true"
                    android:text="@{forgotPasswordVM.forgotPasswordModel.txtPersonality}"
                    style="@style/txtPoppinssemibold18"
                    tools:text="@string/lbl_forgot_password"/>

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/linearForgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/_19pxh"
            android:paddingTop="@dimen/_20pxv"
            android:paddingEnd="@dimen/_20pxh"
            android:paddingBottom="@dimen/_10pxv">

            <LinearLayout
                android:id="@+id/linearPageHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtHelpingOthersMeans"
                    style="@style/txtPoppinsbold34"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/_10pxh"
                    android:text="@{forgotPasswordVM.forgotPasswordModel.txtHelpingOthersMeans}"
                    tools:text="@string/msg_helping_others_means" />

                <TextView
                    android:id="@+id/txtIfYouAreAlways"
                    style="@style/txtPoppinsmedium12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="@dimen/_8pxh"
                    android:text="@{forgotPasswordVM.forgotPasswordModel.txtIfYouAreAlways}"
                    android:textSize="@dimen/_19pxh"
                    tools:text="@string/msg_if_you_are_always" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageLogo"
                android:layout_width="@dimen/_135pxh"
                android:layout_height="@dimen/_121pxh"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:src="@drawable/img_logo_gray_50_01_121x135"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_logo_gray_50_01_121x135" />

            <TextView
                android:id="@+id/txtForgotPassword"
                style="@style/txtPoppinssemibold18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{forgotPasswordVM.forgotPasswordModel.txtForgotPassword}"
                tools:text="@string/lbl_forgot_password" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_border_name_onprimary_opacity_0_1_radius_10"
                android:ellipsize="end"
                android:fontFamily="@font/poppins"
                android:hint="@string/lbl_your_email"
                android:inputType="text"
                android:paddingStart="@dimen/_20pxh"
                android:paddingTop="@dimen/_19pxv"
                android:paddingEnd="@dimen/_20pxh"
                android:paddingBottom="@dimen/_17pxv"
                android:singleLine="true"
                android:text="@={forgotPasswordVM.forgotPasswordModel.etEmailValue}"
                android:textColor="@color/onPrimary"
                android:textColorHint="@color/onPrimary"
                android:textFontWeight="500"
                android:textSize="@dimen/_19pxh"
                android:textStyle="bold"
                tools:ignore="Autofill" />

            <TextView
                android:id="@+id/txtLoremIpsumDolor"
                style="@style/txtPoppinsregular12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="@dimen/_8pxh"
                android:text="@{forgotPasswordVM.forgotPasswordModel.txtLoremIpsumDolor}"
                android:textSize="@dimen/_17pxh"
                tools:text="@string/msg_lorem_ipsum_dolor" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnStart"
            android:layout_width="313dp"
            android:layout_height="84dp"
            android:layout_gravity="center_horizontal"
            android:background="#1565C0"
            android:ellipsize="end"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_7pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingBottom="@dimen/_14pxv"
            android:singleLine="true"
            android:text="@string/lbl_start"
            android:textAllCaps="false"
            android:textColor="@color/white_A700"
            android:textFontWeight="500"
            android:textSize="@dimen/_19pxh"
            android:textStyle="bold"
            tools:text="@string/lbl_start" />

    </LinearLayout>

      </androidx.constraintlayout.widget.ConstraintLayout>